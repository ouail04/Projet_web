<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Importer CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--Importer CSS des icônes des réseaux sociaux -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="static/css/footer.css">
    <link rel="stylesheet" href="static/css/anonyme/header-anonyme.css">

    <% css_files.forEach((file) =>{ %>
    <link rel="stylesheet" href="static/css/<%= file %>">
    <% }); %>
    <title><%= titre %></title>
</head>
<body>
    <!--Barre de navigation -->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="static/img/logo2.png" alt="brand" width="50" height="50">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav">
                        <% pages.forEach((page) => { %>
                            <li class="nav-item">
                                <a class="nav-link <%= page.titre === titre ? 'active' : '' %>" 
                                   href="<%= page.lien %>"
                                   <%= page.titre === titre ? 'aria-current="page"' : '' %>>
                                    <%= page.titre %>
                                </a>
                            </li>
                        <% }); %>
                    </ul>
                    <!--Barre de recherche -->
                    <form class="d-flex mx-auto" role="search">
                        <input class="form-control me-2" type="search" placeholder="Recherche" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">
                            <img src="static/img/searsh-icon.png" alt="searsh-icon" width="20" height="20">
                        </button>
                    </form>

                    <a href="/login" class="btn btn-outline-primary">Connexion</a>
                    <a href="/register" class="btn btn-primary ms-1">Inscription</a>
                </div>

            </div>
        </nav>
    </header>