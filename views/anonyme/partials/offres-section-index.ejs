<section class="offers-section">
    <div class="container">
        <h2 class="text-center mb-5">Derniers offres ajoutés</h2>
        <!-- Liste des offres -->
        <div class="row">
            <!-- Offres affichage -->
            <% offers.forEach((offer) =>{ %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="../../..<%= offer.offre_URL %>" class="card-img-top" alt="Panier de fruits">
                        <div class="card-body">
                            <h5 class="card-title"><%= offer.nom_offre %></h5>
                            <p class="card-text">Prix : <%= offer.prix_apres %> €</p>
                            <a href="/details-offre/<%= offer.id_offre %>" class="btn btn-primary">Voir l'offre</a>                    </div>
                    </div>
           
                </div> 
        <% }); %>        
    </div>
</section>