<section class="filter-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">üîç Recherche</h2>
        <form action="/search-offer-client" method="GET"> <!-- Formulaire pour envoyer les donn√©es -->
            <div class="row">
                <!-- Barre de recherche par nom de produit -->
                <div class="col-md-12 mb-4">
                    <input type="text"
                    class="form-control"
                    id="productSearch"
                    name="nom_offre"
                    placeholder="<%= typeof nom_offre === 'undefined' || nom_offre === '' ? 'Nom du produit...' : '' %>"
                    value="<%= nom_offre || '' %>"> 
                </div>

                <!-- Filtre par ville -->
                <div class="col-md-6 mb-3">
                    <label for="city" class="form-label">Ville</label>
                    <input type="text"
                    class="form-control"
                    id="city"
                    name="ville"
                    placeholder="<%= typeof ville === 'undefined' || ville === '' ? 'Entrez le nom de la ville...' : '' %>"
                    value="<%= ville || '' %>">
                </div>

                <!-- Filtres suppl√©mentaires -->
                <div class="col-md-6 mb-3">
                    <label for="priceSort" class="form-label">Trier par prix</label>
                    <select class="form-select" id="priceSort" name="sorted_prix">
                        <option value="all" <%= (sorted_prix || 'all') === 'all' ? 'selected' : '' %> >S√©lectionner...</option>
                        <option value="haut" <%= (sorted_prix || 'haut') === 'haut' ? 'selected' : '' %> >Du plus bas au plus haut</option>
                        <option value="bas" <%= (sorted_prix || 'bas') === 'bas' ? 'selected' : '' %>>Du plus haut au plus bas</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="expirationDate" class="form-label">Trier par date d'expiration</label>
                    <select class="form-select" id="expirationDate" name="sorted_experation">
                        <option value="all" <%= (sorted_experation || 'all') === 'all' ? 'selected' : '' %> >S√©lectionner...</option>
                        <option value="haut" <%= (sorted_experation || 'haut') === 'haut' ? 'selected' : '' %> >Proche de l'expiration</option>
                        <option value="bas" <%= (sorted_experation || 'bas') === 'bas' ? 'selected' : '' %> >Plus √©loign√©e</option>
                    </select>
                </div>

                

                <div class="col-md-6 mb-3">
                    <label for="type" class="form-label">Type de produit</label>
                    <select class="form-select" id="type" name="type">
                        <option value="all" <%= (type || 'all') === 'all' ? 'selected' : '' %> >Toutes cat√©gories</option>
                        <option value="Fruits & L√©gumes" <%= (type || 'Fruits & L√©gumes') === 'Fruits & L√©gumes' ? 'selected' : '' %> >Fruits & L√©gumes</option>
                        <option value="Boulangerie" <%= (type || 'Boulangerie') === 'Boulangerie' ? 'selected' : '' %> >Boulangerie</option>
                        <option value="Produits laitiers" <%= (type || 'Produits laitiers') === 'Produits laitiers' ? 'selected' : '' %> >Produits laitiers</option>
                        <option value="Viandes & Poissons" <%= (type || 'Viandes & Poissons') === 'Viandes & Poissons' ? 'selected' : '' %> >Viandes & Poissons</option>
                        <option value="Plats pr√©par√©s" <%= (type || 'Plats pr√©par√©s') === 'Plats pr√©par√©s' ? 'selected' : '' %> >Plats pr√©par√©s</option>
                </select>
                </div>


                <!-- Bouton Appliquer les filtres -->
                <div class="col-md-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Appliquer les filtres</button>
                </div>
            </div>
        </form>
    </div>
</section>