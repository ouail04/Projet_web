 <!-- Formulaire de recherche -->
 <form action="/search-offer" class="search-form mb-4" method="GET">
    <div class="row g-3 align-items-end">
        <div class="col-md-6">
            <label for="productSearch" class="form-label">Rechercher un produit</label>
            <div class="input-group">
                <input type="text"
                    class="form-control"
                    id="productSearch"
                    name="nom_offre"
                    placeholder="<%= typeof nom_offre === 'undefined' || nom_offre === '' ? 'Nom du produit...' : '' %>"
                    value="<%= nom_offre || '' %>">               
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search me-1"></i> Rechercher
                </button>
            </div>
        </div>
        <div class="col-md-3">
            <label for="sortBy" class="form-label">Trier par</label>
            <select class="form-select" id="sortBy" name="sort_by">
                <option value="recent" <%= (sort_by || 'recent') === 'recent' ? 'selected' : '' %> >Plus récent</option>
                <option value="oldest" <%= (sort_by || 'oldest') === 'oldest' ? 'selected' : '' %> >Plus ancien</option>
            </select>
        </div>
        <div class="col-md-3">
            <a  class="btn btn-outline-secondary w-100" href="/mes-offres" role="button">
                <i class="bi bi-arrow-counterclockwise me-1"></i> Réinitialiser
            </a>
        </div>
    </div>

    <div class="card-body filtre-avance">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">Statut</label>
                <select class="form-select" id="statusFilter" name="statut">
                    <option value="all" <%= (statut || 'all') === 'all' ? 'selected' : '' %>>Toutes les offres</option>
                    <option value="active" <%= (statut || 'active') === 'active' ? 'selected' : '' %>>Actives</option>
                    <option value="pause" <%= (statut || 'pause') === 'pause' ? 'selected' : '' %> >En pause</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="categoryFilter" class="form-label">Catégorie</label>
                <select class="form-select" id="categoryFilter" name="type">
                    <option value="all" <%= (type || 'all') === 'all' ? 'selected' : '' %> >Toutes catégories</option>
                    <option value="Fruits & Légumes" <%= (type || 'Fruits & Légumes') === 'Fruits & Légumes' ? 'selected' : '' %> >Fruits & Légumes</option>
                    <option value="Boulangerie" <%= (type || 'Boulangerie') === 'Boulangerie' ? 'selected' : '' %> >Boulangerie</option>
                    <option value="Produits laitiers" <%= (type || 'Produits laitiers') === 'Produits laitiers' ? 'selected' : '' %> >Produits laitiers</option>
                    <option value="Viandes & Poissons" <%= (type || 'Viandes & Poissons') === 'Viandes & Poissons' ? 'selected' : '' %> >Viandes & Poissons</option>
                    <option value="Plats préparés" <%= (type || 'Plats préparés') === 'Plats préparés' ? 'selected' : '' %> >Plats préparés</option>
                </select>
            </div>
    
        </div>
    </div>
</form>