<!-- Liste des offres -->
<div class="row" id="offersContainer">

    <% listOffres.forEach((offre) =>{ %>
    <div class="col-md-6 col-lg-4 mb-4" data-created="2023-06-15" data-price="12.50">
        <div class="card offer-card active h-100">
            <div class="card-body">
                <div class="d-flex">
                    <!-- Colonne Image (gauche) -->
                    <div class="me-2" style="min-width:20%">
                        <img src="../../static/img/commerçant-image.jpg" class="img-thumbnail w-100" alt="img" style="height:auto; max-height:200px; object-fit:cover">
                    </div>
                    
                    <!-- Colonne Contenu (droite) -->
                    <div class="flex-grow-1" style="min-width:0">
                        <div class="d-flex flex-wrap justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0 text-truncate">Panier de fruits de saison</h5>
                            <span class="badge bg-success status-badge">Actif</span>
                        </div>
                        
                        <p class="card-text text-muted small mb-2">Mélange de fruits locaux (pommes, poires, raisins)</p>
                        
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <span class="fw-bold text-primary">12,50 €</span>
                                <span class="text-muted ms-2">/panier</span>
                            </div>
                            <div class="text-end">
                                <span class="fw-bold">15</span>
                                <span class="text-muted">disponibles</span>
                            </div>
                        </div>
                        
                        <div class="publication-date mb-2">
                            <i class="bi bi-calendar me-1"></i> Publié le 15/06/2023
                        </div>
                        
                        <div class="d-flex flex-wrap action-buttons">
                            <button class="btn btn-outline-warning btn-sm me-2 mb-1" data-bs-toggle="modal" data-bs-target="#editOfferModal">
                                <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Modifier</span>
                            </button>
                            <button class="btn btn-outline-secondary btn-sm me-2 mb-1">
                                <i class="bi bi-pause"></i> <span class="d-none d-sm-inline">Pause</span>
                            </button>
                            <button class="btn btn-outline-danger btn-sm mb-1" data-bs-toggle="modal" data-bs-target="#deleteOfferModal">
                                <i class="bi bi-trash"></i> <span class="d-none d-sm-inline">Supprimer</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%}); %>

</div>