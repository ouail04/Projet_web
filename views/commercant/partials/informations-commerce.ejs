                <input type="text" class="form-control" id="shopAddress" value="123 Rue du Commerce, 75001 Paris" required>
            </div>
            <div class="col-md-6">
                <label for="shopPhone" class="form-label">Téléphone</label>
                <input type="tel" class="form-control" id="shopPhone" value="01 23 45 67 89">
            </div>
            <div class="col-md-6">
                <label for="shopSiret" class="form-label">SIRET</label>
                <input type="text" class="form-control" id="shopSiret" value="123 456 789 00010" disabled>
            </div>
        </div>
    </div>
</div>