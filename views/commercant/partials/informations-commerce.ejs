<div class="card section-card">
    
        <div class="card-body">
            <h2 class="h5 card-title mb-4"><i class="bi bi-shop me-2"></i> Informations du commerce</h2>
            
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="shopName" class="form-label">Nom du commerce</label>
                    <input type="text" class="form-control" id="shopName" value="<%= commerce_info.nom_commerce %>" name="nom_commerce" required>
                </div>
                <div class="col-md-6">
                    <label for="shopSiret" class="form-label">SIRET</label>
                    <input type="text" class="form-control" id="shopSiret" value="<%= commerce_info.siret %>" name="siret" disabled>
                </div>
                <div class="col-12">
                    <label for="shopAddress" class="form-label">Adresse</label>
                    <input type="text" class="form-control" id="shopAddress" value="<%= commerce_info.adresse_commerce %>" name="adresse_commerce" required>
                </div>
                
            </div>
        </div>
</div>