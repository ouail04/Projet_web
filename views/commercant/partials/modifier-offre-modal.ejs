<!-- Modal Modification d'offre -->
<div class="modal fade" id="editOfferModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Modifier l'offre</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editOfferForm" action="/edit-offre" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id_offre" id="id_offre_modifier">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="nom_offre_modifier" class="form-label">Nom de l'offre</label>
                            <input type="text" class="form-control" id="nom_offre_modifier" name="nom_offre" required>
                        </div>
                        <div class="col-md-4">
                            <label for="type_modifier" class="form-label">Catégorie</label>
                            <input list="categories" class="form-select" id="type_modifier" name="type" required>
                            <datalist id="categories">
                                <option>Fruits & Légumes</option>
                                <option>Boulangerie</option>
                                <option>Produits laitiers</option>
                                <option>Viandes & Poissons</option>
                                <option>Plats préparés</option>
                                <option>Boissons</option>
                                <option>Épicerie</option>
                                <option>Bio</option>
                                <option>Surgelés</option>
                            </datalist>
                        </div>
                        <div class="col-md-4">
                            <label for="prix_avant_modifier" class="form-label">Prix avant réduction (€)</label>
                            <input type="number" step="0.01" class="form-control" id="prix_avant_modifier" name="prix_avant">
                        </div>
                        <div class="col-md-4">
                            <label for="prix_apres_modifier" class="form-label">Prix après réduction (€)</label>
                            <input type="number" step="0.01" class="form-control" id="prix_apres_modifier" name="prix_apres" required>
                        </div>
                        <div class="col-md-4">
                            <label for="date_expiration_modifier" class="form-label">Date d'expiration</label>
                            <input type="date" class="form-control" id="date_expiration_modifier" name="date_expiration">
                        </div>
                        <div class="col-md-6">
                            <label for="disponibilite_modifier" class="form-label">Quantité totale disponible</label>
                            <input type="number" class="form-control" id="disponibilite_modifier" name="disponibilite" required>
                        </div>
                        <div class="col-12">
                            <label for="description_modifier" class="form-label">Description</label>
                            <textarea class="form-control" id="description_modifier" name="description" rows="3"></textarea>
                        </div>
                        <div class="col-12">
                            <label for="condition_modifier" class="form-label">Conditions d'éligibilité (optionnel)</label>
                            <textarea class="form-control" id="condition_modifier" name="condition" rows="3"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="offre_image_modifier" class="form-label">Image de l'offre</label>
                            <input class="form-control" type="file" id="offre_image_modifier" accept="image/*" onchange="previewImage_modifier(this)" name="image">
                            <input type="hidden" id="offre_URL_modifier" name="offre_URL">
                            <div class="mt-2" id="imagePreview_modifier" style="display:block;">
                                <img id="preview_modifier" src="#" alt="Preview" class="img-thumbnail" style="max-height: 150px;">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Statut initial</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="statut" id="offerActive_modifier" value="active">
                                <label class="form-check-label" for="offerActive">
                                    Activer immédiatement
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="statut" id="offerPaused_modifier" value="pause">
                                <label class="form-check-label" for="offerPaused">
                                    Mettre en pause
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary" form="editOfferForm">
                            <i class="bi bi-save me-1"></i> Enregistrer
                        </button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

