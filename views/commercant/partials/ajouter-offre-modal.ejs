 <!-- Modal Ajout d'offre -->
 <div class="modal fade" id="addOfferModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Nouvelle offre</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addOfferForm">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="offerName" class="form-label">Nom de l'offre</label>
                            <input type="text" class="form-control" id="offerName" required>
                        </div>
                        <div class="col-md-4">
                            <label for="offerCategory" class="form-label">Catégorie</label>
                            <select class="form-select" id="offerCategory" required>
                                <option value="" selected disabled>Choisir...</option>
                                <option>Fruits & Légumes</option>
                                <option>Boulangerie</option>
                                <option>Produits laitiers</option>
                                <option>Viandes & Poissons</option>
                                <option>Plats préparés</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="offerPrice" class="form-label">Prix (€)</label>
                            <input type="number" step="0.01" class="form-control" id="offerPrice" required>
                        </div>
                        <div class="col-md-6">
                            <label for="offerQuantity" class="form-label">Quantité disponible</label>
                            <input type="number" class="form-control" id="offerQuantity" required>
                        </div>
                        <div class="col-12">
                            <label for="offerDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="offerDescription" rows="3"></textarea>
                        </div>
                        <div class="col-12">
                            <label for="offerDescription" class="form-label">Conditions d'éligibilité (optionnel)</label>
                            <textarea class="form-control" id="offerDescription" rows="3"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="offerImage" class="form-label">Image</label>
                            <input class="form-control" type="file" id="offerImage" accept="image/*">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Statut initial</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="offerStatus" id="offerActive" value="active" checked>
                                <label class="form-check-label" for="offerActive">
                                    Activer immédiatement
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="offerStatus" id="offerPaused" value="paused">
                                <label class="form-check-label" for="offerPaused">
                                    Mettre en pause
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" onclick="addNewOffer()">
                    <i class="bi bi-save me-1"></i> Enregistrer
                </button>
            </div>
        </div>
    </div>
</div>