<div class="mt-5">
    <h2 class="h4 mb-3"><i class="bi bi-clock-history me-2"></i> Historique des validations</h2>
    
    <!-- Commande validée 1 -->
     <% listCommandesterminier.forEach((commande) =>{ %> 
    <div class="card order-card completed mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="card-title mb-1">#<%= commande.id_commande %> - <%= commande.nom %> <%= commande.prenom %></h5>
                    <p class="card-text mb-1"><%= commande.nom_offre %> (x<%= commande.quantite %>)</p>
                    <small class="text-muted"><i class="bi bi-check-circle text-success me-1"></i> Validée le <%= commande.date_commande  %></small>
                </div>
                <div class="text-end">
                    <span class="badge badge-completed rounded-pill">Terminée</span>
                    <h4 class="mt-2"><%= commande.prix_apres * commande.quantite  %> €</h4>
                </div>
            </div>
        </div>
    </div>
    <%}); %>
</div>