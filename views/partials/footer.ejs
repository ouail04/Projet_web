<!-- Footer -->

<footer class="footer-section bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <!-- Colonne 1 : À propos -->
            <div class="col-md-4 mb-4">
                <h5>À propos de Zero Gaspi</h5>
                <p class="text-muted">
                    Zero Gaspi est une plateforme engagée dans la lutte contre le gaspillage alimentaire. Rejoignez-nous pour un avenir plus durable !
                </p>
                <div class="logo mt-3">
                    <img src="../../static/img/logo2.png" alt="Logo de Zero Gaspi" class="img-fluid" style="max-width: 150px;">
                </div>
            </div>

            <!-- Colonne 2 : Liens utiles -->
            <div class="col-md-4 mb-4">
                <h5>Liens utiles</h5>
                <ul class="list-unstyled">
                    <% pages.forEach((page) =>{ %>
                    <li><a href="<%=page.lien %>" class="text-white text-decoration-none"><%= page.titre %></a></li>
                    <% }); %>
                </ul>
            </div>

    
            <!-- Formulaire de contact -->
            <div class="col-md-4 mb-4" id="contact">
                <h5>Contactez-nous</h5>
                <p class="text-muted">Envoyez-nous un message pour toute question ou suggestion.</p>
                <form action="#">
                    <div class="mb-2">
                        <input type="text" class="form-control" placeholder="Votre nom" required>
                    </div>
                    <div class="mb-2">
                        <input type="email" class="form-control" placeholder="Votre adresse e-mail" required>
                    </div>
                    <div class="mb-2">
                        <textarea class="form-control" rows="3" placeholder="Votre message" required></textarea>
                    </div>
                    <button class="btn btn-success w-100" type="submit">Envoyer</button>
                </form>
            </div>


        </div>

        <!-- Ligne des réseaux sociaux -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <h5>Suivez-nous</h5>
                <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>

        <!-- Ligne du copyright -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <p class="text-muted mb-0">&copy; 2025 Zero Gaspi. Tous droits réservés.</p>
            </div>
        </div>
    </div>
</footer>


