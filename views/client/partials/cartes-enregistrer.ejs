<!-- Onglet 1: Cartes enregistrÃ©es -->
<div class="tab-pane fade show active" id="saved-cards" role="tabpanel">
    <!-- Carte 1 -->

    <% cards.forEach((carte) =>{ %>
    <div class="card mb-3 payment-card">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center mb-2">
                        <h6 class="mb-0"><%= carte.titulaire_carte %></h6>
                    </div>
                    <div class="d-flex flex-wrap align-items-center">
                        <span class="me-3">
                            <i class="bi bi-credit-card fs-5 me-1"></i>
                            <span class="align-middle"><%= carte.carte_type %></span>
                        </span>
                        <span class="me-3">
                            <i class="bi bi-dash-circle fs-5 me-1"></i>
                            <span class="align-middle">**** **** **** <%= carte.last4 %></span>
                        </span>
                        <span>
                            <i class="bi bi-calendar2-check fs-5 me-1"></i>
                            <span class="align-middle"><%= carte.date_expiration %></span>
                        </span>
                    </div>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a class="btn btn-outline-danger btn-sm" href="/delete-card-payment/<%= carte.id_client_payment %>">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
<% }); %>

</div>