<!-- section de filtrage form -->
<section class="filter-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">🔍 Barre de recherche et filtres</h2>
        <form action="" method="GET">
            <div class="row">
                <!-- Barre de recherche par nom de l'offre -->
                <div class="col-md-12 mb-4">
                    <input type="text" class="form-control" name="search" placeholder="Rechercher par nom de l'offre...">
                </div>

                <!-- Filtre par statut -->
                <div class="col-md-6 mb-3">
                    <label for="statusFilter" class="form-label">Filtrer par statut</label>
                    <select class="form-select" id="statusFilter" name="statusFilter">
                        <option value="">Tous les statuts</option>
                        <option value="en_attente">✅ En attente</option>
                        <option value="en_cours">🚀 En cours</option>
                        <option value="terminee">✅ Terminée</option>
                        <option value="annulee">❌ Annulée</option>
                    </select>
                </div>

                <!-- Filtre par date -->
                <div class="col-md-6 mb-3">
                    <label for="dateSort" class="form-label">Trier par date</label>
                    <select class="form-select" id="dateSort" name="dateSort">
                        <option value="recent">Du plus récent au plus ancien</option>
                        <option value="oldest">Du plus ancien au plus récent</option>
                    </select>
                </div>

                <!-- Bouton Appliquer les filtres -->
                <div class="col-md-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Appliquer les filtres</button>
                </div>
            </div>
        </form>
    </div>
</section>